  <!-- ---------------------------------------------------------------- -->
  <!-- Table #1 - Book Info.                                            -->
  <!-- ---------------------------------------------------------------- -->
  <!--            Author / Title / Publisher / Series Name /            -->
  <!--            Series No. / ISBN / Published Date / Book Type        -->
  <!-- ---------------------------------------------------------------- -->
  <table width="100%" border=1>
    <!-- -------------------------------------------------------------- -->
    <!-- Setup of 1st Row in Table #1.                                  -->
    <!--   Name = Author, Size = 40, Maxsize = 50.                      -->
    <!--          Size is the display feild size.                       -->
    <!-- Change the first <td> to <th> so stylesheet is used for <th>.  -->
    <!-- -------------------------------------------------------------- -->
      <tr>
      <td width="12%">
        Author
      </td>
      <td width="38%" bgcolor="lightgray">
        <%=h book.author %>
      </td>
      <td width="12%">
        *
      </td>
      <td width="38%">
        **
      </td>
    </tr>

    <!-- -------------------------------------------------------------- -->
    <!-- Setup of 2nd Row in Table #1.                                  -->
    <!--   Name = Title,, Size = 25, Maxsize = 25.                      -->
    <!--   Name = Publisher, Size = 20, Maxsize = 20.                   -->
    <!-- -------------------------------------------------------------- -->
    <tr>
      <td width="12%">
        Title
      </td>
      <td width="38%" bgcolor="lightgray">
        <%=h book.title %>
      </td>
      <td width="12%">
        Publisher
      </td>
      <td width="38%" bgcolor="lightgray">
        <%=h book.publisher %>
      </td>
    </tr>

    <!-- -------------------------------------------------------------- -->
    <!-- Setup of 3rd Row in Table #1.                                  -->
    <!--   Name = Series name, Size = 25, Maxsize = 25.                 -->
    <!--   Name = Series No. , Size =  3, Maxsize =  3.                 -->
    <!-- -------------------------------------------------------------- -->
    <tr>
      <td width="12%">
        Series Name
      </td>
      <td width="38%" bgcolor="lightgray">
        <%=h book.series_name %>
      </td>
      <td width="12%">
        Series No
      </td>
      <td width="38%" bgcolor="lightgray">
        <%=h book.series_no %>
      </td>
    </tr>
  <!--</table>-->

  <!-- ---------------------------------------------------------------- -->
  <!-- Table #2 - Bottons.                                              -->
  <!-- ---------------------------------------------------------------- -->
  <!--            Show / Edit / Destroy                                 -->
  <!-- ---------------------------------------------------------------- -->
  <table width="100%" border=0>
    <tr>
      <td width="15%">
      </td>
      <td width="10%">
        <%= link_to 'Show', book %>
      </td>
      <td width="10%">
        <%= link_to 'Edit', edit_book_path(book) %>
      </td>
      <td width="10%">
        <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
      <td width="55%">
      </td>
    </tr>
  </table>

