<!%= form_with(model: booktype, local: true) do |form| %>
<%= form_for(@booktype) do |f| %>
  <!-- ---------------------------------------------------------------- -->
  <!-- Error handeling.                                                 -->
  <!-- ---------------------------------------------------------------- -->
   <% if booktype.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(booktype.errors.count, "error") %> prohibited this booktype from being saved:</h2>

      <ul>
      <% booktype.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <!-- ------------------------------------------------------------------ -->
  <!-- The first 2 lines wil get the last record, column book_type_idx,   -->
  <!--   or you can just use the third line to get the last record,       -->
  <!--   column booktype_idx.                                             -->
  <!-- The forth lines adds 1 to lastidx to get next_idx.                 -->
  <!-- Display next_idx.                                                  --> 
  <!-- ------------------------------------------------------------------ -->
  <!% lastidx = @last_idx %>
  <!% lastidx = lastidx.book_type_idx %>
  <!% lastidx = @last_idx.book_type_idx %>
  <!% next_idx = lastidx + 1 %>
  <!-- Display the next idx                                               -->
  Next book_type is : <%= @next_idx %>

  <!-- ------------------------------------------------------------------ -->
  <!-- Table #1.                                                          -->
  <!-- ------------------------------------------------------------------ -->
  <!--            Book Type idx / Book Type Name                          -->
  <!-- ------------------------------------------------------------------ -->
  <table width="50%" border=1>
    <tr>
      <td width="15%">
        <%= f.label :booktype_idx %>
      </td>
      <td width="5%">
        <%= f.text_field :book_type_idx,
                         :size => 1,
                         :maxsize => 5,
                         :placeholder => @next_idx,
                         :value => @next_idx %>
                          <!-- autofocus: true %> -->
      </td>
    </tr>
    <tr>
      <td width="15%">
        <%= f.label :book_type_name %>
      </td>
      <td width="10%">
        <%= f.text_field :book_type_name,
                         :size => 10,
                          autofocus: true %>
      </td>
    </tr>
 
  </table>

  <br>
  <div class="actions">
    <%= f.submit "Add Book Types" %>
  </div>
<% end %>

