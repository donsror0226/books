<h1>
  List Book Types
</h1>

<!-- -------------------------------------------------------------------- -->
<!-- The notice is a message stating that Add/Edit was successfully.      -->
<!-- -------------------------------------------------------------------- -->
<p id="notice"><%= notice %></p>

<!-- -------------------------------------------------------------------- -->
<!-- Table #1 - Head for Table 2 BookType Info.                           -->
<!-- -------------------------------------------------------------------- -->
<!--<table width="50%" border="0">-->
<table colspan=5 width="50%">
  <thead>
    <tr>
      <td width="5%">
        Idx
      </td>
      <td width="10%">
        Name
      </td>
      <td width="30%">
      </td>
    </tr>
  </thead>
</table>

<!-- -------------------------------------------------------------------- -->
<!-- Table #2 - Condition Info.                                           -->
<!-- -------------------------------------------------------------------- -->
<!--            Booktype_idx / Booktype_name                              -->
<!-- -------------------------------------------------------------------- -->
<!--<table width="50%" border="1">-->
<table id="border" width="50%" border="1">
  <tbody>
    <% @booktypes.each do |booktype| %>
      <tr>
        <td width="5%">
          <%=h booktype.book_type_idx %>
        </td>

       <td width="10%">
          <%=h booktype.book_type_name %>
        </td>
 
        <td width="10%">
          <%= link_to 'Show', booktype %>
        </td>

        <td width="10%">
          <%= link_to 'Edit', edit_booktype_path(booktype) %>
        </td>

        <td width="10%">
          <%= link_to 'Destroy', booktype, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

